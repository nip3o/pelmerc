[user]
	name = Andreas Pelme
	email = andreas@pelme.se

[color]
    ui = auto


[alias]
    br = branch
    st = status
    co = checkout
    ci = commit
    di = diff
    dc = diff --cached
    amend = commit --amend

    head = !git l -1
    h = !git head
    hp = "!source ~/.githelpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all


[push]
	default = current
