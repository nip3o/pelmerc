#!/bin/sh

# Thanks, Jacob Kaplan-Moss:
# http://jacobian.org/writing/auto-building-sphinx/

watchmedo shell-command \
              --patterns="*.txt" \
              --patterns="*.rst" \
              --patterns="*.swp" \
              --ignore-pattern='_build/*' \
              --recursive \
              --wait \
              --command='make html'
